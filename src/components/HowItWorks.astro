---
import type { Locale } from "../i18n";
import { useTranslations } from "../i18n";

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const t = useTranslations(locale).howItWorks;

const stepNumbers = ["01", "02", "03"];
---

<section id="how-it-works" class="relative z-10 py-24 md:py-32">
  <div class="mx-auto max-w-6xl px-6">
    <div class="text-center mb-16">
      <h2
        class="font-mono font-bold text-3xl md:text-4xl tracking-tight animate-fade-in-up"
      >
        {t.heading} <span class="gradient-text">{t.headingHighlight}</span>
      </h2>
      <p
        class="mt-4 text-muted text-lg max-w-2xl mx-auto animate-fade-in-up"
        style="animation-delay: 0.1s"
      >
        {t.subline}
      </p>
    </div>

    <div class="flex flex-col gap-12 lg:gap-0">
      {/* Step 1: Create Classroom — Dashboard UI mockup */}
      <div class="animate-fade-in-up" style="animation-delay: 0.15s">
        <div
          class="relative flex flex-col lg:flex-row items-center lg:items-stretch gap-8 lg:gap-0"
        >
          <div class="flex-1 lg:text-right lg:pr-12 flex flex-col justify-center">
            <div class="inline-flex items-center gap-3 mb-4 lg:flex-row-reverse">
              <span
                class="font-mono text-5xl font-bold gradient-text leading-none"
                >{stepNumbers[0]}</span
              >
            </div>
            <h3 class="font-mono font-semibold text-xl mb-3">
              {t.steps[0].title}
            </h3>
            <p class="text-muted leading-relaxed max-w-md inline-block">
              {t.steps[0].description}
            </p>
          </div>

          <div class="hidden lg:flex flex-col items-center w-8 shrink-0">
            <div class="flex-1 w-px bg-transparent"></div>
            <div class="w-4 h-4 rounded-full border-2 border-primary bg-background shrink-0 glow-sm"></div>
            <div class="flex-1 w-px bg-gradient-to-b from-primary/40 to-primary/10"></div>
          </div>

          <div class="flex-1 w-full max-w-md lg:pl-12">
            <div
              class="glass rounded-xl overflow-hidden hover:border-primary/30 hover:shadow-[0_0_30px_hsl(185_100%_50%/0.06)] transition-all duration-500"
            >
              <div
                class="flex items-center gap-3 px-4 py-2.5 border-b border-border/50"
              >
                <div class="flex gap-1.5">
                  <div class="w-2.5 h-2.5 rounded-full bg-[#ff5f57]/80"></div>
                  <div class="w-2.5 h-2.5 rounded-full bg-[#febc2e]/80"></div>
                  <div class="w-2.5 h-2.5 rounded-full bg-[#28c840]/80"></div>
                </div>
                <span class="text-[11px] font-mono text-muted/60"
                  >{t.ui.newClassroom}</span
                >
              </div>
              <div class="p-5 space-y-3">
                <div>
                  <div class="text-[11px] font-mono text-muted/60 mb-1.5">
                    {t.ui.name}
                  </div>
                  <div
                    class="px-3 py-2 rounded-md bg-background/60 border border-border/50 text-[13px] font-mono text-foreground"
                  >
                    Intro to Computer Science
                  </div>
                </div>
                <div class="grid grid-cols-2 gap-3">
                  <div>
                    <div class="text-[11px] font-mono text-muted/60 mb-1.5">
                      {t.ui.students}
                    </div>
                    <div
                      class="px-3 py-2 rounded-md bg-background/60 border border-border/50 text-[13px] font-mono text-muted"
                    >
                      24
                    </div>
                  </div>
                  <div>
                    <div class="text-[11px] font-mono text-muted/60 mb-1.5">
                      {t.ui.gitlabGroup}
                    </div>
                    <div
                      class="px-3 py-2 rounded-md bg-background/60 border border-border/50 text-[13px] font-mono text-muted"
                    >
                      cs-intro-26
                    </div>
                  </div>
                </div>
                <div
                  class="mt-2 px-4 py-2 rounded-md bg-primary text-primary-foreground text-[13px] font-mono font-semibold text-center"
                >
                  {t.ui.createClassroom}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      {/* Step 2: Students Join & Code — Terminal */}
      <div class="animate-fade-in-up" style="animation-delay: 0.3s">
        <div
          class="relative flex flex-col lg:flex-row-reverse items-center lg:items-stretch gap-8 lg:gap-0"
        >
          <div class="flex-1 lg:text-left lg:pl-12 flex flex-col justify-center">
            <span
              class="font-mono text-5xl font-bold gradient-text leading-none inline-block mb-4"
              >{stepNumbers[1]}</span
            >
            <h3 class="font-mono font-semibold text-xl mb-3">
              {t.steps[1].title}
            </h3>
            <p class="text-muted leading-relaxed max-w-md">
              {t.steps[1].description}
            </p>
          </div>

          <div class="hidden lg:flex flex-col items-center w-8 shrink-0">
            <div class="flex-1 w-px bg-gradient-to-b from-primary/10 to-primary/40"></div>
            <div class="w-4 h-4 rounded-full border-2 border-primary bg-background shrink-0 glow-sm"></div>
            <div class="flex-1 w-px bg-gradient-to-b from-primary/40 to-primary/10"></div>
          </div>

          <div class="flex-1 w-full max-w-md lg:pr-12">
            <div
              class="glass rounded-xl overflow-hidden hover:border-primary/30 hover:shadow-[0_0_30px_hsl(185_100%_50%/0.06)] transition-all duration-500"
            >
              <div
                class="flex items-center gap-2 px-4 py-2.5 border-b border-border/50"
              >
                <div class="flex gap-1.5">
                  <div class="w-2.5 h-2.5 rounded-full bg-[#ff5f57]/80"></div>
                  <div class="w-2.5 h-2.5 rounded-full bg-[#febc2e]/80"></div>
                  <div class="w-2.5 h-2.5 rounded-full bg-[#28c840]/80"></div>
                </div>
                <span class="ml-2 text-[11px] font-mono text-muted/60"
                  >~/assignments</span
                >
              </div>
              <div class="p-4 font-mono text-[13px] leading-7">
                <div class="flex gap-2">
                  <span class="text-primary select-none">$</span>
                  <span class="text-foreground"
                    >git clone cs-intro-26/assignment-1</span
                  >
                </div>
                <div class="flex gap-2">
                  <span class="text-muted select-none">&nbsp;</span>
                  <span class="text-muted"
                    >Cloning into 'assignment-1'...</span
                  >
                </div>
                <div class="flex gap-2">
                  <span class="text-primary select-none">$</span>
                  <span class="text-foreground">git checkout -b solution</span>
                </div>
                <div class="flex gap-2">
                  <span class="text-primary select-none">$</span>
                  <span class="text-foreground">git push origin solution</span>
                </div>
                <div class="flex gap-2">
                  <span class="text-[hsl(140,70%,50%)] select-none">✓</span>
                  <span class="text-muted"
                    >Branch 'solution' pushed — CI running</span
                  >
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      {/* Step 3: Automatic Grading — Results dashboard */}
      <div class="animate-fade-in-up" style="animation-delay: 0.45s">
        <div
          class="relative flex flex-col lg:flex-row items-center lg:items-stretch gap-8 lg:gap-0"
        >
          <div class="flex-1 lg:text-right lg:pr-12 flex flex-col justify-center">
            <div class="inline-flex items-center gap-3 mb-4 lg:flex-row-reverse">
              <span
                class="font-mono text-5xl font-bold gradient-text leading-none"
                >{stepNumbers[2]}</span
              >
            </div>
            <h3 class="font-mono font-semibold text-xl mb-3">
              {t.steps[2].title}
            </h3>
            <p class="text-muted leading-relaxed max-w-md inline-block">
              {t.steps[2].description}
            </p>
          </div>

          <div class="hidden lg:flex flex-col items-center w-8 shrink-0">
            <div class="flex-1 w-px bg-gradient-to-b from-primary/10 to-primary/40"></div>
            <div class="w-4 h-4 rounded-full border-2 border-primary bg-background shrink-0 glow-sm"></div>
            <div class="flex-1 w-px bg-transparent"></div>
          </div>

          <div class="flex-1 w-full max-w-md lg:pl-12">
            <div
              class="glass rounded-xl overflow-hidden hover:border-primary/30 hover:shadow-[0_0_30px_hsl(185_100%_50%/0.06)] transition-all duration-500"
            >
              <div
                class="flex items-center gap-3 px-4 py-2.5 border-b border-border/50"
              >
                <div class="flex gap-1.5">
                  <div class="w-2.5 h-2.5 rounded-full bg-[#ff5f57]/80"></div>
                  <div class="w-2.5 h-2.5 rounded-full bg-[#febc2e]/80"></div>
                  <div class="w-2.5 h-2.5 rounded-full bg-[#28c840]/80"></div>
                </div>
                <span class="text-[11px] font-mono text-muted/60"
                  >{t.ui.gradingResults}</span
                >
              </div>
              <div class="p-5 space-y-3">
                <div
                  class="flex items-center justify-between px-3 py-2 rounded-md bg-background/60 border border-border/50"
                >
                  <span class="text-[13px] font-mono text-foreground"
                    >assignment-1</span
                  >
                  <span
                    class="text-[12px] font-mono font-semibold text-[hsl(140,70%,50%)]"
                    >{t.ui.testsPassed}</span
                  >
                </div>
                <div class="px-3">
                  <div class="flex justify-between text-[11px] font-mono mb-2">
                    <span class="text-muted">{t.ui.testCoverage}</span>
                    <span class="text-primary">90%</span>
                  </div>
                  <div
                    class="h-2 rounded-full bg-background/80 border border-border/30 overflow-hidden"
                  >
                    <div
                      class="h-full rounded-full bg-gradient-to-r from-primary to-[hsl(280,100%,60%)]"
                      style="width: 90%"
                    >
                    </div>
                  </div>
                </div>
                <div class="grid grid-cols-3 gap-2 pt-1">
                  <div
                    class="text-center px-2 py-2 rounded-md bg-[hsl(140,70%,50%)]/5 border border-[hsl(140,70%,50%)]/20"
                  >
                    <div
                      class="text-lg font-mono font-bold text-[hsl(140,70%,50%)]"
                    >
                      18
                    </div>
                    <div class="text-[10px] font-mono text-muted">{t.ui.passed}</div>
                  </div>
                  <div
                    class="text-center px-2 py-2 rounded-md bg-[#ff5f57]/5 border border-[#ff5f57]/20"
                  >
                    <div class="text-lg font-mono font-bold text-[#ff5f57]">
                      2
                    </div>
                    <div class="text-[10px] font-mono text-muted">{t.ui.failed}</div>
                  </div>
                  <div
                    class="text-center px-2 py-2 rounded-md bg-[hsl(280,100%,60%)]/5 border border-[hsl(280,100%,60%)]/20"
                  >
                    <div
                      class="text-lg font-mono font-bold text-[hsl(280,100%,70%)]"
                    >
                      {t.ui.gradeValue}
                    </div>
                    <div class="text-[10px] font-mono text-muted">{t.ui.grade}</div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
