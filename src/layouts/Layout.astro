---
import type { Locale } from "../i18n";

interface Props {
  title: string;
  description?: string;
  locale: Locale;
}

const {
  title,
  description = "Self-hosted teaching tool with GitLab integration for digital classrooms, coding assignments, and automated grading.",
  locale,
} = Astro.props;

const altLocale = locale === "en" ? "de" : "en";
---

<!doctype html>
<html lang={locale} class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#0ff0fc" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="alternate" hreflang={locale} href={`/${locale}/`} />
    <link rel="alternate" hreflang={altLocale} href={`/${altLocale}/`} />
    <link rel="alternate" hreflang="x-default" href="/en/" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,400;0,500;0,600;0,700;1,400&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Geist:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="overflow-x-hidden">
    <div class="relative min-h-screen">
      <div class="dot-grid" aria-hidden="true"></div>
      <slot />
    </div>
  </body>
</html>

<style is:global>
  .dot-grid {
    position: fixed;
    inset: 0;
    z-index: 0;
    pointer-events: none;
    background-image: radial-gradient(
      hsl(220 16% 25% / 0.4) 1px,
      transparent 1px
    );
    background-size: 32px 32px;
    mask-image: radial-gradient(
      ellipse 80% 60% at 50% 40%,
      black 20%,
      transparent 70%
    );
  }
</style>
